<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <!-- Log4Net Section initialize -->
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <log4net>
    <root>
      <!-- Define that all Messages will be written to Log! -->
      <level value="ALL" />
      <appender-ref ref="MyConsoleAppender" />
      <appender-ref ref="MyFileAppender" />
      <appender-ref ref="MyEventViewerAppender" />
    </root>
    <!-- Define a Console Appender with Layout settings -->
    <appender name="MyConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %level %logger - %message%newline" />
      </layout>
    </appender>
    <appender name="MyFileAppender" type="log4net.Appender.FileAppender">
      <file value="application.log" />
      <appendToFile value="true" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %level %logger - %message%newline" />
      </layout>
    </appender>
    <appender name="MyEventViewerAppender" type="log4net.Appender.EventLogAppender">
      <LogName value="Application" />
      <applicationName value="Crayfire.Console.Database" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>
  </log4net>
  <!-- END log4net Section-->
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>
</configuration>